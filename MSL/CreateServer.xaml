                <TextBox HorizontalAlignment="Left" Height="144" Margin="544,92,0,0" TextWrapping="Wrap" Text="Spigot及Paper——只可加插件&#xA;Purpur——只可加插件&#xA;Mojang——纯原版，啥也不能加&#xA;MODServer——均可加MOD，有的可加插件" VerticalAlignment="Top" Width="174" Focusable="False" IsReadOnly="True" FontFamily="Microsoft YaHei UI" Background="{x:Null}"/>
                <Button x:Name="openSpigot" Content="SpigotMc" Margin="544,268,0,0" VerticalAlignment="Top" Width="173" FontFamily="Microsoft YaHei UI" FontSize="12" Height="32" Background="#33000000" FontWeight="Normal" Click="openSpigot_Click"/>
                <Button x:Name="openPaper" Content="PaperMc" Margin="544,305,0,0" VerticalAlignment="Top" Width="173" FontFamily="Microsoft YaHei UI" FontSize="12" Height="32" Background="#33000000" FontWeight="Normal" Click="openPaper_Click"/>
                <Button x:Name="openMojang" Content="Mojang" Margin="544,342,0,0" VerticalAlignment="Top" Width="173" FontFamily="Microsoft YaHei UI" FontSize="12" Height="32" Background="#33000000" FontWeight="Normal" Click="openMojang_Click"/>
                <Label Content="相关网站" HorizontalAlignment="Left" Margin="544,245,0,0" VerticalAlignment="Top"/>
                <Label x:Name="updatetime" Content="最新下载源更新时间" HorizontalAlignment="Left" Margin="561,13,0,0" VerticalAlignment="Top"/>
                <Label Content="在此选择服务端：" HorizontalAlignment="Left" Margin="9,10,0,0" VerticalAlignment="Top" FontSize="20" Width="156" FontWeight="Bold"/>
                <Label Content="我该如何选择服务端？" HorizontalAlignment="Left" Margin="561,69,0,0" VerticalAlignment="Top"/>
                <Label Content="双击版本号进行下载：" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" FontSize="16" Width="155"/>
            </Grid>
        </Grid>
    </Border>
</Window>
