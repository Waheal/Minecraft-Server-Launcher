                            <Button x:Name="selectserver" Content="我有服务端" HorizontalAlignment="Left" Margin="396,129,0,0" VerticalAlignment="Top" Width="214" FontFamily="Microsoft YaHei UI" FontWeight="Normal" FontSize="18" Height="65" Click="selectserver_Click" Style="{StaticResource AccentButtonStyle}"/>
                            <Button x:Name="downloadserver" Content="我没有服务端" HorizontalAlignment="Left" Margin="103,129,0,0" VerticalAlignment="Top" Width="214" Click="downloadserver_Click" FontFamily="Microsoft YaHei UI" FontWeight="Normal" FontSize="18" Height="65" Style="{StaticResource AccentButtonStyle}"/>
