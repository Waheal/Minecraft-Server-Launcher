                            <Button x:Name="downloadjava" Content="没有安装Java" HorizontalAlignment="Left" Margin="103,144,0,0" VerticalAlignment="Top" Width="214" FontFamily="Microsoft YaHei UI" FontWeight="Normal" FontSize="18" Height="65" Click="downloadjava_Click" Style="{StaticResource AccentButtonStyle}"/>
                            <Button x:Name="next3" Content="下一步" HorizontalAlignment="Left" Margin="185,200,0,0" VerticalAlignment="Top" Width="94" Click="next3_Click" FontFamily="Microsoft YaHei UI" FontWeight="Normal" Height="39" FontSize="14" Visibility="Hidden"/>
                            <Rectangle Fill="#FF008B44" HorizontalAlignment="Left" Height="5" VerticalAlignment="Top" Width="146"/>
                            <Label x:Name="jvhelp" Content="帮助：不同版本该如何选择Java？ &#xA;1.8-1.13 只能使用Java8 &#xA;1.14-1.17 可以使用Java8-Java16 &#xA;1.18 必须使用Java17&#xA;1.19 必须使用Java18" HorizontalAlignment="Left" Margin="28,281,0,0" VerticalAlignment="Top" FontSize="18" Foreground="#FFFF6800" Visibility="Hidden"/>
                            <Label Content="Java" HorizontalAlignment="Left" Margin="11,10,0,0" VerticalAlignment="Top" FontSize="36" Foreground="#FF008B44"/>
                            <RadioButton x:Name="useJVself" Content="没有配置环境变量，在此选择地址" Margin="10,128,0,0" VerticalAlignment="Top" FontFamily="Microsoft YaHei UI" Checked="useJVself_Checked" Visibility="Hidden"/>
