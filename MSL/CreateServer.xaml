                            <Image HorizontalAlignment="Left" Height="82" Margin="0,283,0,0" VerticalAlignment="Top" Width="86" Source="我的世界开服器_00001.ico">
                                <Image.OpacityMask>
                                    <ImageBrush ImageSource="我的世界开服器_00001.ico"/>
                                </Image.OpacityMask>
                            </Image>
                        </Grid>
                        <Grid x:Name="javagrid" HorizontalAlignment="Center" Height="402" VerticalAlignment="Center" Width="744" Background="#FFF1F3F8">
                            <Button x:Name="return1" Content="上一步" Margin="73,200,0,0" VerticalAlignment="Top" Width="87" Click="return1_Click" FontFamily="Microsoft YaHei UI" FontWeight="Normal" Height="39" FontSize="14" Visibility="Hidden"/>
                            <Label x:Name="label3" Content="您电脑安装Java了吗？" HorizontalAlignment="Left" Margin="28,76,0,0" VerticalAlignment="Top" FontSize="20" Foreground="#FF0097FF"/>
